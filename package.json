{
  "name": "toa",
  "version": "0.0.0",
  "private": true,
  "description": "Microservice operations distributed runtime",
  "homepage": "https://toa.io",
  "author": {
    "name": "Artem Gurtovoi",
    "url": "https://github.com/temich"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toa-io/toa.git"
  },
  "bugs": {
    "url": "https://github.com/toa-io/toa/issues"
  },
  "workspaces": [
    "runtime/*",
    "connectors/*",
    "extensions/*",
    "libraries",
    "operations"
  ],
  "engines": {
    "node": ">= 12.0.0"
  },
  "bin": {
    "toa": "runtime/runtime/bin/toa"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.17.0",
    "@commitlint/cli": "14.1.0",
    "@commitlint/config-conventional": "14.1.0",
    "@cucumber/cucumber": "8.3.1",
    "@types/node": "18.0.0",
    "clone-deep": "4.0.1",
    "execa": "5.1.1",
    "husky": "7.0.4",
    "jest": "27.3.1",
    "node-fetch": "2.6.7",
    "randomstring": "1.2.1",
    "snazzy": "9.0.0",
    "standard": "16.0.4"
  },
  "scripts": {
    "prepare": "npx husky install",
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "npx standard --verbose | npx snazzy",
    "test:unit": "npx jest --roots runtime connectors extensions operations libraries features",
    "test:integration": "npx jest --roots integration --runInBand",
    "test:features": "npx cucumber-js",
    "test:all": "npm run test && npm run test:integration && npm run test:features",
    "integration:deploy": "npm run publish:local && npx toa deploy ./integration/context",
    "lint": "npx standard --verbose --fix | npx snazzy",
    "npm:login:local": "npm adduser --registry http://localhost:4873",
    "version:dev": "npx --yes lerna version --conventional-prerelease --preid dev --force-publish --no-git-tag-version --no-push --no-changelog --yes && npm i",
    "publish:local": "npm publish --workspaces",
    "cluster": "chmod +x ./integration/scripts/cluster.sh && ./integration/scripts/cluster.sh",
    "buildx": "docker buildx create --name toa --use && docker buildx inspect --bootstrap",
    "setup": "docker compose up -d && npm run cluster && npm run buildx && npm run publish:local && npm ci && toa deploy ./integration/context",
    "connect": "telepresence quit && telepresence connect && telepresence intercept -l dev",
    "psql": "docker exec -it toa-postgres-1 psql -U developer -d test"
  },
  "standard": {
    "parser": "@babel/eslint-parser",
    "env": {
      "jest": true
    },
    "globals": [
      "AbortController"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/runtime",
      "<rootDir>/connectors",
      "<rootDir>/extensions",
      "<rootDir>/operations",
      "<rootDir>/libraries",
      "<rootDir>/integration",
      "<rootDir>/features"
    ],
    "testMatch": [
      "**/?(*.)+(test).js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "clearMocks": true,
    "bail": true
  }
}
