{
  "name": "toa",
  "version": "0.0.0",
  "private": true,
  "description": "Microservice operations distributed runtime",
  "homepage": "https://toa.io",
  "author": {
    "name": "Artem Gurtovoi",
    "url": "https://github.com/temich"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toa-io/toa.git"
  },
  "bugs": {
    "url": "https://github.com/toa-io/toa/issues"
  },
  "workspaces": [
    "runtime/*",
    "connectors/*",
    "extensions/*"
  ],
  "engines": {
    "node": ">= 12.0.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.16.0",
    "@babel/plugin-proposal-class-properties": "7.16.0",
    "@babel/plugin-proposal-private-methods": "7.16.0",
    "@commitlint/cli": "14.1.0",
    "@commitlint/config-conventional": "14.1.0",
    "@types/jest": "27.0.2",
    "clone-deep": "4.0.1",
    "execa": "5.1.1",
    "husky": "7.0.4",
    "jest": "27.3.1",
    "lerna": "4.0.0",
    "node-fetch": "2.6.6",
    "randomstring": "1.2.1",
    "snazzy": "9.0.0",
    "standard": "16.0.4"
  },
  "scripts": {
    "dev": "docker compose up -d",
    "test": "standard --verbose | snazzy && npm run test:unit && npm run test:integration",
    "test:unit": "jest --roots runtime connectors extensions",
    "test:integration": "jest --roots integration --runInBand",
    "lint": "standard --verbose --fix | snazzy",
    "prepare": "husky install"
  },
  "standard": {
    "parser": "@babel/eslint-parser",
    "env": {
      "jest": true
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/runtime",
      "<rootDir>/connectors",
      "<rootDir>/extensions",
      "<rootDir>/integration"
    ],
    "testMatch": [
      "**/?(*.)+(test).js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "clearMocks": true,
    "bail": true
  }
}
