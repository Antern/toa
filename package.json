{
  "name": "toa",
  "version": "0.0.0",
  "description": "microservice operations distributed runtime",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toa-io/toa.git"
  },
  "license": "MIT",
  "homepage": "https://toa.io",
  "author": {
    "name": "Artem Gurtovoi",
    "url": "https://github.com/temich"
  },
  "workspaces": [
    "runtime/*",
    "connectors/*",
    "extensions/*"
  ],
  "engines": {
    "node": ">= 12.0.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.13.8",
    "@babel/plugin-proposal-class-properties": "7.13.0",
    "@babel/plugin-proposal-private-methods": "7.13.0",
    "@commitlint/cli": "13.2.1",
    "@commitlint/config-conventional": "13.2.0",
    "clone-deep": "4.0.1",
    "execa": "5.1.1",
    "husky": "5.0.9",
    "jest": "26.6.3",
    "lerna": "3.22.1",
    "node-fetch": "2.6.2",
    "randomstring": "1.1.5",
    "snazzy": "9.0.0",
    "standard": "16.0.3"
  },
  "scripts": {
    "dev": "docker compose up -d",
    "test": "standard --verbose | snazzy && yarn test:unit && yarn test:integration",
    "test:unit": "jest --roots runtime connectors extensions",
    "test:integration": "jest --roots integration --runInBand",
    "lint": "standard --verbose --fix | snazzy",
    "install": "./node_modules/.bin/lerna bootstrap --ignore-scripts",
    "prepare": "husky install"
  },
  "standard": {
    "parser": "@babel/eslint-parser",
    "env": {
      "jest": true
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/runtime",
      "<rootDir>/connectors",
      "<rootDir>/extensions",
      "<rootDir>/integration"
    ],
    "testMatch": [
      "**/?(*.)+(test).js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "clearMocks": true,
    "bail": true
  }
}
