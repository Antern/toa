{
  "name": "toa",
  "version": "0.0.0",
  "private": true,
  "description": "Microservice operations distributed runtime",
  "homepage": "https://toa.io",
  "author": {
    "name": "Artem Gurtovoi",
    "url": "https://github.com/temich"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toa-io/toa.git"
  },
  "bugs": {
    "url": "https://github.com/toa-io/toa/issues"
  },
  "workspaces": [
    "runtime/*",
    "connectors/*",
    "extensions/*"
  ],
  "engines": {
    "node": ">= 12.0.0"
  },
  "bin": {
    "toa": "runtime/runtime/bin/toa"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.16.0",
    "@commitlint/cli": "14.1.0",
    "@commitlint/config-conventional": "14.1.0",
    "clone-deep": "4.0.1",
    "execa": "5.1.1",
    "husky": "7.0.4",
    "jest": "27.3.1",
    "lerna": "4.0.0",
    "node-fetch": "2.6.6",
    "randomstring": "1.2.1",
    "snazzy": "9.0.0",
    "standard": "16.0.4"
  },
  "scripts": {
    "prepare": "npx husky install",
    "test": "npx standard --verbose | npx snazzy && npm run test:unit",
    "test:unit": "npx jest --roots runtime connectors extensions",
    "test:integration": "npx jest --roots integration --runInBand",
    "lint": "npx standard --verbose --fix | npx snazzy",
    "publish:local": "npx lerna publish --conventional-prerelease --preid dev --dist-tag dev --no-changelog --registry http://localhost:4873 --yes",
    "cluster": "chmod +x ./integration/scripts/cluster.sh && ./integration/scripts/cluster.sh",
    "registry": "docker run --name verdaccio -p 4873:4873 -d --rm verdaccio/verdaccio && npm adduser --registry http://localhost:4873",
    "setup": "npm run registry && npm run cluster && toa deploy ./integration/context",
    "connect": "telepresence quit && telepresence connect && telepresence intercept -l dev",
    "dev": "npm run setup && npm run connect"
  },
  "standard": {
    "parser": "@babel/eslint-parser",
    "env": {
      "jest": true
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/runtime",
      "<rootDir>/connectors",
      "<rootDir>/extensions",
      "<rootDir>/integration"
    ],
    "testMatch": [
      "**/?(*.)+(test).js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "clearMocks": true,
    "bail": true
  }
}
